<p id="notice"><%= notice %></p>

<h1>Watchlists</h1>
<h1><a href="/searches">Search</a></h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Genre</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watchlists.each do |watchlist| %>
      <tr>
        <td><%= watchlist.title %></td>
        <td><%= watchlist.year %></td>
        <td><%= watchlist.director %></td>
        <td><%= watchlist.genre %></td>
        <td><%= watchlist.rating %></td>
        <td><% link_to 'Show', watchlist %></td>
        <td><% link_to 'Edit', edit_watchlist_path(watchlist) %></td>
        <td><%= button_to 'Remove Item', watchlist, method: :delete, data: { confirm: "Delete #{watchlist["title"]}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
